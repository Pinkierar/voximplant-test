{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "#entities/*": ["./src/entities/*"],
      "#db": ["./src/db"],
      "#includes/*": ["./src/includes/*"],
      "#variables/*": ["./src/variables/*"],
      "#training/*": ["./src/training/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
