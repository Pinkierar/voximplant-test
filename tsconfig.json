{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "#entities/*": ["./src/entities/*"],
      "#includes/*": ["./src/includes/*"],
      "#errors/*": ["./src/errors/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
